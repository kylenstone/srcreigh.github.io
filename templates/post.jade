doctype html

html
  head
    if(title)
      title S. C. Young - #{title}
    else
      title S. C. Young

    include includes/css.jade
    include includes/analytics.jade

    meta(name="viewport", content="width=device-width, initial-scale=1")

  body
    include includes/sidebar.jade
    #content
      .date !{prettydate}
      h1 #{title}
      if(preamble)
        blockquote !{preamble}
      !{contents}
